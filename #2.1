void insert(int Arr[],int item,int *n,int max){
    if (*n==max){
        printf("overflow");
        return;
    }
    int loc;
    for (int i = 0; i < *n; i++)
    {
        if (Arr[i]>item)
        {
           loc=i;
           break;
        }
    }
    int j=*n-1;
    while (j>=loc){
        Arr[j+1]=Arr[j];
        j=j-1;
    }
    Arr[loc]=item;
    *n=*n+1;
}
void delete(int Arr[],int loc,int *n){
    int item=Arr[loc];
    int j=loc;
    while (j<(*n-1)){
        Arr[j]=Arr[j+1];
        j=j+1;
    }
    *n=*n-1;
}
