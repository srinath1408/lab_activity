#include <stdio.h>
#include <stdlib.h>

int main() {
    int n1, n2;
    printf("Enter the size of the initial array: ");
    scanf("%d", &n1);
    int *Arr = (int*)malloc(n1 * sizeof(int));
    printf("Enter elements of array ");
    for (int i = 0; i < n1; i++) {
        scanf("%d", &Arr[i]);
    }
    printf("Enter the size of expansion: \n");
    scanf("%d", &n2);
    Arr = (int*)realloc(Arr, (n1 + n2) * sizeof(int));
    printf("Enter elements of the extended part ");
    for (int i = n1; i < n1 + n2; i++) {
        scanf("%d ", &Arr[i]);
    }
    printf("State of the array with all values\n");
    for (int i = 0; i < n1 + n2; i++) {
        printf("%d ", Arr[i]);
    }
    printf("\n");
    free(Arr);
    return 0;
}
